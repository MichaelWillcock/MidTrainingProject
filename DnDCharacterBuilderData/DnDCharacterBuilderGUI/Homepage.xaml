<Page x:Class="DnDCharacterBuilderGUI.Homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDCharacterBuilderGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Homepage">

    <Grid>
        <Button Content="Logout" HorizontalAlignment="Left" Margin="50,320,0,0" VerticalAlignment="Top" Click="Logout_Click"/>
        <Button Content="User Settings" HorizontalAlignment="Left" Margin="50,290,0,0" VerticalAlignment="Top" Click="UserSettings_Click"/>
        <TextBlock Name="Welcome" HorizontalAlignment="Left" Margin="115,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="35" FontWeight="Bold" TextDecorations="Underline" Foreground="Red"/>
        <ListBox x:Name="CharacterListBox" Margin="150,80,150,80"/>
        <Button Content="Add Character" HorizontalAlignment="Left" Margin="455,170,0,0" VerticalAlignment="Top" Click="AddCharacter_Click"/>
        <Button Content="Remove Character" HorizontalAlignment="Left" Margin="455,200,0,0" VerticalAlignment="Top" Click="RemoveSelectedCharacter_Click"/>
        <Button Content="Refresh Character List" HorizontalAlignment="Left" Margin="455,230,0,0" VerticalAlignment="Top" Click="Refresh_Click"/>
    </Grid>
</Page>
